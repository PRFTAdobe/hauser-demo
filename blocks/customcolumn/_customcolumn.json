{
  "definitions": [
    {
      "title": "Custom Columns",
      "id": "customColumn",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/columns/v1/columns",
            "template": {
              "name": "Custom Columns",
              "model": "customColumn"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "customColumn",
      "fields": [
        {
          "component": "select",
          "name": "numColumns",
          "label": "Number of Columns",
          "valueType": "string",
          "options": [
            { "name": "1", "value": "1" },
            { "name": "2", "value": "2" },
            { "name": "3", "value": "3" },
            { "name": "4", "value": "4" }
          ],
          "xwalk": {
            "property": "data-num-columns"
          }
        },
        {
          "component": "select",
          "name": "layout",
          "label": "Layout",
          "valueType": "string",
          "options": [
            { "name": "Full Width", "value": "full-width" },
            { "name": "Column Width", "value": "column-width" }
          ],
          "xwalk": {
            "property": "data-layout"
          }
        },
        {
          "component": "select",
          "name": "customClass",
          "label": "Style Class",
          "valueType": "string",
          "options": [
            { "name": "Dark Background", "value": "dark-bg" },
            { "name": "Light Background", "value": "light-bg" },
            { "name": "With Border", "value": "with-border" },
            { "name": "Rounded", "value": "rounded" }
          ],
          "xwalk": {
            "property": "data-custom-class"
          }
        }
      ]
    }
  ],
  "filters": [
    {
      "id": "custom-columns",
      "components": ["column"]
    },
    {
      "id": "column",
      "components": ["text", "image", "title", "button"]
    }
  ]
}
